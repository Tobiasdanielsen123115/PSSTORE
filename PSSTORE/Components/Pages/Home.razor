@page "/"
@using PSSTORE.Models
@inject HttpClient Http;

<PageTitle>Ware</PageTitle>


@if (wares == null)
{
    <p>loading..</p>
}

<div class="container">
    <div class="row">
        @foreach (var ware in wares)
        {
            <div class="col-md-3">
                <div class="card mb-4">
                    <img class="card-img-top" src="@($"data:image/png;base64,{Convert.ToBase64String(ware.Photo)}")" alt="@ware.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@ware.Name</h5>
                        <p class="card-text">@ware.Description</p>
                        <p class="card-text"><strong>Price:</strong> @ware.Price</p>
                        <button style="width:100px">
                            <img src="/images/shoppingcart.svg" height="20px" width="50px"/>
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@code{
    private List<Ware> wares = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            wares = await Http.GetFromJsonAsync<List<Ware>>("api/Wares");
        }
        catch (Exception ex)
        {
            await Console.Out.WriteLineAsync("NÆH INTA TINGA" + ex);
        }


    }

}