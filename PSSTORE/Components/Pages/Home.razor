@page "/"
@using PSSTORE.Models
@inject HttpClient Http;

<PageTitle>Ware</PageTitle>


@if (wares == null)
{
    <p>loading..</p>
}

<th>
    

    @foreach(var ware in wares)
    {
        <p>
            @ware.Name
        </p>
    }

</th>












@code{

    private List<Ware> wares = new List<Ware>();

    protected override async Task OnInitializedAsync()
    {
        wares = await Http.GetFromJsonAsync<List<Ware>>("api/Wares");
    }

}